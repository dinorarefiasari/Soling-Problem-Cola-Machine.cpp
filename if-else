#include <iostream>
using namespace std;
int main()
{
int angka;
cout<<"Selamat Datang"<<endl;
cout<<"Daftar Pilihan Minuman"<<endl;
cout<<"1.teh sosro"<<endl;
cout<<"2.cappucino"<<endl;
cout<<"3.aqua"<<endl;
cout<<"4.fanta"<<endl;
cout<<"5.big cola"<<endl;
cout<<"selamat datang"<<endl;
cout<<"Masukkan Pilihan Anda " <<endl;
cin>>angka;
if (angka==1)
cout<<"Anda Memesan teh sosro,Pesanan Anda Akan Keluar";
else
if (angka==2)
cout<<"Anda Memesan cappucino,Pesanan Anda Akan Keluar";
else
if (angka==3)
cout<<"Anda Memesan aqua,Pesanan Anda Akan Keluar";
else
if (angka==4)
cout<<"Anda Memesan fanta, Pesanan Anda Akan Keluar";
else
if (angka==5)
cout<<"Anda Memesan, Pesanan Anda Akan Keluar ";
else
cout<<"Anda Memasukkan Angka Yang Salah";
cout<<"Terimakasih"<<endl;
return 0;
}
